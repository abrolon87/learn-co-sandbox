count = 0

while count < 4 do
  puts "I am #{count}, I love to count!"
  count = count + 1 
end

while count < 5 do
  puts "I am #{count}"
  count += 1 
end

#break

magic_exit_number = 7
count = 0 
while count < 10 do
  break if count == magic_exit_number
  puts "I am the #{count}"
  count = count + 1
end

magic_exit_number = 7
count = 0 
while count < 10 && count != magic_exit_number do
  puts "I am the #{count}, I love to count!"
  count = count + 1 
end


